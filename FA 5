destinations = []
print("Enter five travel destinations:")

for i in range(5):
    destination = input(f"Destination {i+1}: ")
    destinations.append(destination)

print("\nYou can now update the 2nd and 5th destinations.")

new_second = input("Enter new destination for position 2: ")
destinations[1] = new_second   # index 1 → second element

new_fifth = input("Enter new destination for position 5: ")
destinations[4] = new_fifth   # index 4 → fifth element

print("\nUpdated Travel Itinerary:")
for i in range(len(destinations)):
    print(f"{i+1}. {destinations[i]}")
